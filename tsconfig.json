{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "strict": true,
    "lib": [
      "ES2020",
      "DOM",
    ],
    "types": [
      "node"
    ],
    "rootDir": "src/",
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**.ts",
    "./src/**.json"
  ]
}
